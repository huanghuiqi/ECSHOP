<!--#登录界面 start-->
<!-- {if $action eq 'login'} -->
<div class="lg_layout">
  <div class="login_form">
    <form name="formLogin" action="user.php" method="post" onSubmit="return userLogin()">
      <table class="login w_100">
        <tr><th colspan="2">会员登录</th></tr>
        <tr>
          <td align="right">{$lang.label_username}:</td>
